<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlayMovieApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="background">@color/primary</item>
        <item name="android:windowBackground">@color/primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
    </style>

    /* Activity - Fullscreen */

    <style name="Theme.PlayMovieApp.Fullscreen" parent="Theme.PlayMovieApp">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    /* Body1 */

    <style name="Custom.Body1" parent="Theme.PlayMovieApp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Custom.Body1.400" parent="Custom.Body1">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Custom.Body1.500" parent="Custom.Body1">
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Custom.Body1.700" parent="Custom.Body1">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Custom.Body2" parent="Theme.PlayMovieApp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    /* Caption */

    <style name="Custom.caption" parent="Theme.PlayMovieApp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Custom.caption.400" parent="Custom.caption">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    /* TextInputLayout */

    <style name="Theme.PlayMovieApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxBackgroundColor">@color/colorPrimaryDark</item>
        <item name="hintTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="Theme.PlayMovieApp.TextInputLayout.Custom" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="Theme.PlayMovieApp.TextInputEditText" parent="Theme.PlayMovieApp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_3</item>
    </style>

    /* MaterialButton */

    <style name="Theme.PlayMovieApp.MaterialButton.Default" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/secondary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:layout_height">@dimen/height_default_button</item>
        <item name="android:textSize">@dimen/font_size_4</item>
    </style>

    /*
    MaterialButton - default
    NAME SIZE
    headline1 112.0
    headline2 56.0
    headline3 45.0
    headline4 34.0
    headline5 24.0
    headline6 20.0
    subtitle1 16.0
    body2 16.0
    body1 14.0
    caption 12.0
    button 14.0
    subtitle2 14.0
    overline 10.0
    */

</resources>