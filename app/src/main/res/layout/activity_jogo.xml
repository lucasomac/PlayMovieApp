<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.JogoActivity">

    <include
        android:id="@+id/include_config_toolbar"
        layout="@layout/app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_clock"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_tiny"
        app:layout_constraintEnd_toStartOf="@id/textView_time"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_config_toolbar"
        app:srcCompat="@drawable/ic_clock" />

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:23s"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/imageView_clock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView_clock"
        app:layout_constraintTop_toTopOf="@id/imageView_clock" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_movie"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_clock">

        <ImageView
            android:id="@+id/imageView_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/sample_filme_cover" />

    </androidx.cardview.widget.CardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_revelar_letra"
        android:layout_width="@dimen/size_buttom_icon_3"
        android:layout_height="@dimen/size_buttom_icon_3"
        android:layout_marginTop="@dimen/margin_small"
        android:stateListAnimator="@null"
        android:theme="@style/Custom.Buttom.IconOnly"
        app:icon="@drawable/ic_revelar_letra"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toStartOf="@id/button_remover_letra"
        app:layout_constraintStart_toStartOf="@id/cardView_movie"
        app:layout_constraintTop_toBottomOf="@id/cardView_movie" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_remover_letra"
        android:layout_width="@dimen/size_buttom_icon_3"
        android:layout_height="@dimen/size_buttom_icon_3"
        android:layout_marginTop="@dimen/margin_small"
        android:stateListAnimator="@null"
        android:theme="@style/Custom.Buttom.IconOnly"
        app:icon="@drawable/ic_delete_letra"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="@id/cardView_movie"
        app:layout_constraintStart_toStartOf="@id/cardView_movie"
        app:layout_constraintTop_toBottomOf="@id/cardView_movie" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_dica"
        android:layout_width="@dimen/size_buttom_icon_3"
        android:layout_height="@dimen/size_buttom_icon_3"
        android:layout_marginTop="@dimen/margin_small"
        android:stateListAnimator="@null"
        android:theme="@style/Custom.Buttom.IconOnly"
        app:icon="@drawable/ic_dica_letra"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="@id/cardView_movie"
        app:layout_constraintStart_toEndOf="@id/button_remover_letra"
        app:layout_constraintTop_toBottomOf="@id/cardView_movie" />
    
</androidx.constraintlayout.widget.ConstraintLayout>