<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlayMovieApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="background">@color/primary</item>
        <item name="android:windowBackground">@color/primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
    </style>

    /* Activity - Fullscreen */

    <style name="Theme.PlayMovieApp.Fullscreen" parent="Theme.PlayMovieApp">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    /* Body1 */

    <style name="Custom.Body1" parent="Theme.PlayMovieApp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Custom.Body1.400" parent="Custom.Body1">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Custom.Body1.500" parent="Custom.Body1">
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Custom.Body1.700" parent="Custom.Body1">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    /* Caption */

    <style name="Custom.caption" parent="Theme.PlayMovieApp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Custom.caption.400" parent="Custom.caption">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    /*
